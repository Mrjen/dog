/* pages/rescueMe/rescueMe.wxss */
page{
  background: #389f99;
}

.container{
  position: absolute;
  width: 100%;
  height: 80vh;
  left:0;
  top: 0;
  display: flex;
  justify-content: center;
  align-content: center;
  color: #fff;
}

.in_card{
  width: 580rpx;
  height: 900rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.persion_img{
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin:0 auto;
  margin-top: 30rpx;
}

.persion_name{
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  margin:20rpx auto;
}

.dog_food_icon{
  width: 50rpx;
  height: 50rpx;
  background: url(https://single-dog.playonwechat.com/static/home/home_persion_dognum.png);
  background-size: 50rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.dog_food_num{
  display: flex;
  justify-content: center;
  margin-top: 160rpx;
}

.num_tip{
  text-align: center;
  font-size: 28rpx;
  margin:10rpx auto;
}

.dog_dog_icon{
   width:50rpx;
   height: 50rpx;
   background: url(https://single-dog.playonwechat.com/static/home/home_persion_dogfooter.png);
   background-size: 50rpx;
   margin-right: 10rpx;
}

.rescue_me{
  width: 250rpx;
  height: 50rpx;
  border:1px solid #fff;
  border-radius: 30rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
}

/*底部导航*/
.bottom_nav{
  width: 100%;
  height: 108rpx;
  background: #badad7;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
}

.nav_icon{
  display: block;
  width: 60rpx;
  height: 60rpx;
}

.nav_item{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}

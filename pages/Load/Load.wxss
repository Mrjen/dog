/* pages/Load/Load.wxss */
@import "../index/index.wxss";

page{
  background: #fff;
}

.foot_btn_box{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(56, 159, 153, 1);
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dog_foot{
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin:0 auto;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 10;
}

.shadow{
  width: 326rpx;
  height: 326rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 2;
  transform: translate(-50%,-50%);
  animation: shadow 2s infinite;
}

@keyframes shadow {
   0%,100%{
      opacity: .6;
   }
   50%{
     opacity: 1;
   }
}

.tip{
  position: relative;
  z-index: 10;
}

.foot_box_in{
  width: 280rpx;
  height: 160rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}
